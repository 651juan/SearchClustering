{
  "manifest_version": 2,
  
  "name": "Search Clustering",
  "description": "A Search Clustering Extension",
  "version": "1.0",

  "icons": {"16": "icons/icon16.png",
	  "48": "icons/icon48.png",
				"128": "icons/icon128.png" },

	"page_action": { 
		"default_icon": {                  
            "19": "icons/icon19.png",           
            "38": "icons/icon38.png" 
          },
		 "default_title": "Search Clustering",   
         "default_popup": "popup.html"  
	},
	
	"sandbox": {
		"pages": ["sandboxPage.html"]
	},

  "background": {
	"scripts": ["background.js"],
	 "persistent": false
  },
  
  "permissions" : [
	"tabs",
	"webNavigation",
	"*://*/*"
  ]
}