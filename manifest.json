{
	"manifest_version": 2,

	"name": "Search Clustering",
	"description": "A Search Clustering Extension",
	"version": "1.0",

	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png" 
	},

	"page_action": { 
		"default_icon": {                  
			"19": "icons/icon19.png",           
			"38": "icons/icon38.png" 
		},
		"default_title": "Search Clustering",   
		"default_popup": "popup.html"  
	},

	"background": {
		"scripts": ["scripts/background.js"],
		"persistent": false
	},
	
	"content_scripts": [{
		"matches": ["*://*/*"],
		"js": ["scripts/utils.js", "scripts/textanalysis/porterStemmer.js", "scripts/som/som.js", "scripts/kMeans/kMeans.js", "scripts/kMeans/kMeansFunctions.js", "scripts/main.js", "scripts/gmm/gmm.js", "scripts/numeric.js", "scripts/gmm/DPMixtureModel.js", "scripts/gmm/GaussianComponent.js"]
	}],
	"permissions" : [
		"tabs",
		"webNavigation",
		"*://*/*"
	]
}